package com.null6th.BirdEatWorms.view;

import java.awt.Graphics;
import java.awt.image.BufferedImage;

import com.null6th.BirdEatWorms.util.R;

public class Worm {
	private BufferedImage Worm;
	public int x = 0;
	public int w = 0;
	private int upy = 0;
	private GamePanel gp;
	public int temp;

	public Worm(GamePanel gp) {
		this.gp = gp;
		distance = 100;
		Worm = R.lode("worm.jpg");
		w = Worm.getWidth();
		reset();
	}

	private void reset() {
		// distance--;
		x = 0;
		randomY();
	}

	/*
	 * 随机虫子位置
	 */
	public void randomY() {
		temp = MyRandom(10, gp.getSkyHeigh() - distance - 10);
		upy = temp - Worm.getHeight();
	}

	/*
	 * 返回a和b之间的随机数
	 * 
	 */
	private static int MyRandom(int a, int b) {
		return ((int) (Math.random() * Math.abs(a - b))) + Math.min(a, b);
	}

	public void paint(Graphics g) {
		// x = x - 10;
		x--;
		g.drawImage(Worm, x, upy, null);
	}
}
